<h1>Edit Delivery</h1>

<h2>Dropsites Deliverable</h2>
<div class="row">
  <div class="col-xs-12">
    <table class="table">
      <thead>
        <tr>
          <th class="text-center">Name</th>
          <th class="text-center">Address</th>
          <th class="text-center">Action</th>
        </tr>
      </thead>
      <tbody>    
        <% @dropsites_deliverable.each do |dropsite| %>
          <tr>
            <td class="text-center"><%= dropsite.name %></td>
            <td class="text-center"><%= dropsite.address + " " + dropsite.city + " " + dropsite.state + " " + dropsite.zip.to_s %></td>
            <% if @delivery.dropsites.find_by(id: dropsite.id).nil? %>
              <td class="text-center"><%= link_to "Deliver!", delivery_path(id: @delivery, dropsite_id: dropsite.id), method: "patch", class: "btn btn-primary outline", data: { confirm: "Please confirm delivery for " + dropsite.name + ". Note: DELIVERY NOTIFICATIONS WILL BE SENT IMMEDIATELY!!" } %></td>
            <% else %>
              <td class="text-center">-</td>
            <% end %>            
          </tr>
        <% end %>
      </tbody>
    </table>  
  </div>
</div>