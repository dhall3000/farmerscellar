<h1>Delivery</h1>

<h2>Dropsites Deliverable</h2>
<div class="row">
  <div class="col-xs-12">
    <table class="table">
      <thead>
        <tr>
          <th class="text-center">Name</th>
          <th class="text-center">Address</th>
          <th class="text-center">Status</th>
        </tr>
      </thead>
      <tbody>    
        <% @dropsites_deliverable.each do |dropsite| %>
          <tr>
            <td class="text-center"><%= dropsite.name %></td>
            <td class="text-center"><%= dropsite.address + " " + dropsite.city + " " + dropsite.state + " " + dropsite.zip.to_s %></td>
            <% if @delivery.dropsites.find_by(id: dropsite.id).nil? %>
              <td class="text-center">-</td>
            <% else %>
              <td class="text-center">delivered</td>
            <% end %>            
          </tr>
        <% end %>
      </tbody>
    </table>  
  </div>
</div>

<div class="row">
  <div class="col-xs-4">
    <%= link_to "Edit Delivery", edit_delivery_path(@delivery) %>    
  </div>
  <div class="col-xs-8">    
  </div>
</div>