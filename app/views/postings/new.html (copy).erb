<% provide(:title, 'New posting') %>

<h1>New posting</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @posting do |f| %>

		<% if false %>
		<%= render 'shared/error_messages' %>
		<% end %>

		<%= f.label :product %>
		<%= collection_select @posting, :product_id, @products, :id, :name, prompt: true %>

		<%= f.label :description %>
		<%= f.text_field :description, class: 'form-control' %>

		<%= f.label :unit_category %>
		<%= collection_select @posting, :unit_category_id, @unit_categories, :id, :name, prompt: true %>		

		<%= f.label :unit_kind %>
		<%= collection_select @posting, :unit_kind_id, @unit_kinds, :id, :name, prompt: true %>

		<%= f.submit "Create new posting", class: "btn btn-primary" %>

		<% end %>
	</div>
</div>

<div>

<% if @posting.id == nil %>
  <p>id == nil</p>
<% else %>
  <p><%= @posting.id %></p>
<% end %>

<% if @posting.user_id == nil %>
  <p>user_id == nil</p>
<% else %>
  <p><%= @posting.user_id %></p>
<% end %>

</div>