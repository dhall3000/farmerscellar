<% #grab params from local_assigns
  posting = local_assigns[:posting]
%>

<% if posting && posting.valid? %>
  <div class="col-xs-6">

    <%= link_to posting, class: "non-blue" do %>
      <div class="posting-thumbnail">
        <% if posting.uploads.last %>        
          <%= image_tag "#{posting.uploads.last.file_name.square}", class: "hundred-percent-width" %>
        <% elsif (upload = Upload.find_by(title: NOPRODUCTIMAGETITLE)) %>
          <%= image_tag upload.file_name.square, class: "hundred-percent-width" %>
        <% end %>

        <div class="thumbnail-content-padding">

          <div class="truncated-text-line">
            <%= posting.description %>
          </div>

          <div class="right-of-truncated-text">
            <strong><%= number_to_currency(posting.price) %></strong>        
          </div>

          <div class="truncated-text-line producer-name-font">
            <%= posting.user.farm_name %>
          </div>

        </div>
      </div>
    <% end %>


  </div>
<% end %>