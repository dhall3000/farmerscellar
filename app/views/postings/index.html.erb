<% provide(:title, 'Postings') %>

<h1>Postings</h1>
<% if @postings != nil && @postings.any? %>  
  <table class="table">
    <thead>
      <tr>
        <th class="text-center">Producer</th>
        <th class="text-center">Product</th>
        <th class="text-center">Price</th>   
        <th class="text-center">Unit</th>
        <th class="text-center">Posting</th>
        <% if current_user.account_type == User.types[:ADMIN] %>
          <th>Do delivery</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @postings.each do |posting| %>
        <tr>
          <td><a tabindex="0" class="btn btn-primary btn-block" role="button" data-toggle="popover" data-trigger="focus" data-content="<%=posting.user.description%>"><%= User.find_by(id: posting.user_id).farm_name %></a></td>          
          <td><a tabindex="0" class="btn btn-primary btn-block" role="button" data-toggle="popover" data-trigger="focus" data-content="<%= posting.description %>"><%= Product.find_by(id: posting.product_id).name %></a></td>
          <td class="text-center"><%= posting.price %></td>
          <td class="text-center"><%= UnitKind.find_by(id: posting.unit_kind_id).name %></td>
          <td class="text-center"><%= link_to "view", new_tote_item_path(posting_id: posting.id) %></td>
          <% if current_user.account_type == User.types[:ADMIN] %>
            <th><%= link_to "Go!", tote_items_next_path( tote_item: {posting_id: posting.id}) %></th>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>  
<% end %>

<% if false %>
<th><%= link_to "Go!", 'tote_items/next', posting_id: posting.id %></th>
<% end %>

<script>
$(function(){ $('.btn').popover(); });
</script>