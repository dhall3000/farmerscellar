<h1>Creditor Orders</h1>

<% if @open_orders && @open_orders.any? %>
  <h2>Unclosed Orders</h2>
  <table class="table">
    <thead>
      <tr>          
        <th class="text-left">Creditor</th>          
        <th class="text-center">Delivery Date</th>
      </tr>
    </thead>
    <tbody>
      <% @open_orders.each do |co| %>
        <tr>
          <td class="text-left">
            <%= link_to co.creditor.get_business_interface.name, creditor_order_path(co) %>
          </td>
          <td class="text-center">                
            <%= co.delivery_date.strftime("%A %B %d, %Y") %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% if @closed_orders && @closed_orders.any? %>
  <h2>Closed Orders</h2>
  <table class="table">
    <thead>
      <tr>          
        <th class="text-left">Creditor</th>          
        <th class="text-center">Delivery Date</th>
      </tr>
    </thead>
    <tbody>
      <% @closed_orders.each do |co| %>
        <tr>
          <td class="text-left">
            <%= link_to co.creditor.get_business_interface.name, creditor_order_path(co) %>
          </td>
          <td class="text-center">                
            <%= co.delivery_date.strftime("%A %B %d, %Y") %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>