<h1>Checkout Confirmed</h1>

<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Status</h2>
      </div>
      <div class="panel-body">
        <% if @authorization_succeeded %>
          <p>You just successfully completed payment authorization for the items listed below. A receipt has been emailed to you.</p>
        <% else %>
          <div class="alert alert-danger">Something seems to have gone wrong with your payment authorization. Please <%= link_to "contact us", contact_path %> to get this issue corrected. Thank you!</div>
        <% end %>

      </div>
    </div>      
  </div>
</div>

<% if @authorization_succeeded %>
  <%= render partial: 'shared/orderables', locals: { tote_items: @tote_items, subscriptions: @subscriptions, show_remove_button: false, items_total_gross: @items_total_gross } %>
<% end %>