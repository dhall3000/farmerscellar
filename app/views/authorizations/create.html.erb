<% if @authorization_succeeded %>
<h1>Payment Authorization Complete</h1>
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div>
        <p>You just successfully completed payment authorization for the items listed below. A receipt has been emailed to you.</p>
      </div>
    </div>
  </div>
  
  <%= render partial: "shared/tote", locals: { tote_items: @successfully_authorized_tote_items, authorization_adjective: "successful", subscriptions: @subscriptions } %>

	<% if @successfully_authorized_subscriptions && @successfully_authorized_subscriptions.any? %>

	  <p>
	    Additionally, you authorized future charges to your payment account associated with the following <%= "subscription".pluralize(@successfully_authorized_subscriptions.count) %>:
	  </p>

	  <ul>
	    <% @successfully_authorized_subscriptions.each do |subscription| %>
	      <li><%= subscription.description %></li>
	    <% end %>
	  </ul>  

	<% end %>

<% else %>
<h1>Payment Authorization Error</h1>
  Something seemed to have gone wrong with your payment authorization. Please <%= link_to "contact us", contact_path %> to get this issue corrected. Thank you!
<% end %>