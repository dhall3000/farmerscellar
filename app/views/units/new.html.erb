<h1>New Unit</h1>

<div class="row">
  <div class="col-xs-12 col-sm-offset-3 col-sm-6">
    <div>
      <%= link_to "units", units_path %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-offset-3 col-sm-6">
    <%= form_for @unit do |f| %>
      <%= render partial: 'shared/error_messages_general', locals: { active_record_object: @unit } %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>      
      <%= f.submit "Create new unit", class: "btn btn-lg btn-primary outline" %>
    <% end %>
  </div>
</div>