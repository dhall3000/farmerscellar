<h1><%= @unit.name %></h1>

<div class="row">
  <div class="col-xs-12 col-sm-offset-3 col-sm-6">
    <div>
      <%= link_to "units", units_path %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-offset-3 col-sm-6">
    <div>
      <%= link_to "Edit #{@unit.name}", edit_unit_path(@unit), class: "btn btn-lg btn-primary outline" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-offset-3 col-sm-6">
    <div>
      <%= link_to 'Destroy', @unit,  method: :delete, data: { confirm: "Delete unit #{@unit.name}?" }, class: "btn btn-lg btn-primary outline" %>
    </div>
  </div>
</div>