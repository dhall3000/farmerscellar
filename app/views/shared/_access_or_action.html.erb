<% if logged_in? %>
  <% if current_user.access_code == nil %>
    <%= render partial: "shared/access_code_submission" %>
  <% else %>
    <div class="row text-center">
      <% if current_user.account_type == 0 %>
        <%= link_to "Shop!", postings_path, class: "btn btn-lg btn-primary" %>
      <% else %>
        <div class="col-md-4"></div>
        <div class="col-md-2">
          <%= link_to "Shop!", postings_path, class: "btn btn-lg btn-primary btn-block" %>
        </div>
        <div class="col-md-2">        
          <%= link_to "Create new posting", new_posting_path(current_user), class: "btn btn-lg btn-primary" %>         
        </div>
        <div class="col-md-4"></div>
      <% end %>
    </div>
  <% end %>
<% end %>


