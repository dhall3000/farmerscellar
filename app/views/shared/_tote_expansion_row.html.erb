<% if !tote_item.nil? %>  
  <div class="panel-group" role="tablist" aria-multiselectable="true">      

    <div class="panel panel-default">
      <div class="panel-heading" role="tab">
        <h4 class="panel-title">Order Info</h4>
      </div>                
      <div class="panel-body">
        <ul class="list-group">

          <% if tote_item.additional_units_required_to_fill_my_case > 0 %>
            <li class="list-group-item">
              <div class="fat-finger-spacing">                





                <p class="alert alert-danger"><span class="alert-danger glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                  <% if tote_item.will_partially_fill? %>                
                    <span> Currently this item will only partially ship</span>
                    <% fully = " fully" %>
                  <% else %>
                    <span> Currently this item will not ship</span>
                    <% fully = "" %>
                  <% end %>              
                </p>



              </div>              
              <div>
                <%= link_to "More info", tote_items_pout_path(id: tote_item.id), class: "btn btn-primary btn-lg btn-block" %>
              </div>              
            </li>
          <% end %>

          <div class="hidden-sm hidden-md hidden-lg">
            <li class="list-group-item">
              Quantity: <%= tote_item.quantity.to_s + " " + Unit.find_by(id: tote_item.posting.unit_id).name.pluralize(tote_item.quantity) %>
              <% if tote_item.posting.unit_equivalency_description %>
                <ul>
                  <li><%= tote_item.posting.unit_equivalency_description %></li>
                </ul>
              <% end %>
            </li>
            <li class="list-group-item">
              Price: <%= number_to_currency(tote_item.posting.price) %> / <%= Unit.find_by(id: tote_item.posting.unit_id).name %>
              <% if tote_item.posting.price_equivalency_description %>
                <ul>
                  <li><%= tote_item.posting.price_equivalency_description %></li>
                </ul>
              <% end %>
            </li>
          </div>
          <li class="list-group-item"><%= link_to("Order Cutoff", how_things_work_path(anchor: "cutoff")) %>: <%= tote_item.posting.commitment_zone_start.strftime("%a %m/%d %l:%M %p") %></li>
          <% if !tote_item.subscription.nil? %>
            <li class="list-group-item">This is a subscription for <%= tote_item.subscription.description %></li>          
          <% end %>
        </ul>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading" role="tab">
        <h4 class="panel-title">Product Info</h4>
      </div>                
      <div class="panel-body">
        <ul class="list-group">
          <li class="list-group-item">Producer: <%= tote_item.posting.user.farm_name %></li>
          <% if !tote_item.posting.user.website.nil? %>
            <li class="list-group-item">Producer Website:  <%= link_to tote_item.posting.user.website, url_with_protocol(tote_item.posting.user.website), target: "_blank" %></li>
          <% end %>
          <% if tote_item.posting.product_attributes %>
            <li class="list-group-item">Product Attributes: <%= tote_item.posting.product_attributes %></li>          
          <% end %>
          <li class="list-group-item">Product Description: <%= tote_item.posting.description %></li>          
          <li class="list-group-item">Producer Description: <%= tote_item.posting.user.description %></li>

        </ul>
      </div>
    </div>
  </div>
<% end %>