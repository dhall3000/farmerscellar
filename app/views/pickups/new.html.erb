<% provide(:title, "Pickup") %>
<div class="center jumbotron jumbotron-spacing">
  <h1>Farmer's Cellar</h1>
  <h2>Pickup here</h2>
</div>
<div class="row">
	<div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4">
		<%= form_tag pickups_path do %>
			<%= number_field_tag :pickup_code, nil, class: 'input-lg fat-finger-spacing', placeholder: "Tap here to enter pickup code..." %>			
			<%= submit_tag "Enter", class: 'btn btn-lg btn-primary outline form-control', data: { disable_with: "Please wait...sometimes slow! :(" } %>			
		<% end %>
	</div>
</div>

<div class="row">
	<div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4" data-toggle="collapse" data-target="#helpBody">
    <div class="text-center">
      <span class="dropsite_question_mark">?</span>
      <span id="helpBodyChevron" class="glyphicon glyphicon-chevron-down"></span>          
    </div>    
	</div>
</div>

<div class="row">
	<div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4">		
		<div id="helpBody" class="collapse" data-chevron="#helpBodyChevron">
			<ul class="list-group">
				<li class="list-group-item">
					<p>Hint: fetch your pickup code from any delivery notification email</p>
				</li>
			</ul>		      
		</div>		
	</div>
</div>