<% provide(:title, "Pickup") %>
<div class="row">
  <div class="col-xs-12">
    <div  data-toggle="collapse" data-target="#headerContent">
      <div class="text-center" id="logo" style="font-size: 4.0em;padding-top: 50px;">Farmer's Cellar</div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="text-center" style="padding-top: 25px; padding-bottom: 25px;">
      <span id="easy">Easy</span><span id="local-food-connection"> local foods connection.</span>
    </div>
  </div>
</div>

<div class="row" style="padding-top: 50px;">
	<div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4">
		<%= form_tag pickups_path do %>
			<%= number_field_tag :pickup_code, nil, class: 'input-lg fat-finger-spacing', placeholder: "Tap here to enter pickup code..." %>			
			<%= submit_tag "Enter", class: 'btn btn-lg btn-primary outline form-control', data: { disable_with: "Please wait...sometimes slow! :(" } %>			
		<% end %>
	</div>
</div>