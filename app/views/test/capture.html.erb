<h1>Test Capture</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
		  <div class="panel-heading">
		    <p>Capture</p>
		  </div>
	    <div class="panel-body">	    	
				<%= form_tag test_capture_path, method: :post do %>				  
				  <%= label_tag :amount %>
				  <%= number_field_tag :amount, nil, class: 'form-control' %>
				  <%= submit_tag "Capture", class: 'btn btn-primary form-control' %>
				<% end %>
	    </div>
    </div>
  </div>
</div>