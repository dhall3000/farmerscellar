<h1>Dropsite</h1>

<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <div>
      <%
      upload = Upload.find_by(title: "DROPSITE")
      if upload
      %>
        <%= image_tag upload.file_name.large, class: "img-responsive" %>
      <% end %>
    </div>    
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    Name: <%= @dropsite.name %>
  </div>
</div>

<% if !@dropsite.phone.nil? %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    Phone: <%= @dropsite.phone %>
  </div>
</div>
<% end %>

<% if !@dropsite.hours.nil? %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    Hours: <%= @dropsite.hours %>
  </div>
</div>
<% end %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    Address: <%= @dropsite.address + ", " + @dropsite.city + ", " + @dropsite.state + " " + @dropsite.zip.to_s %>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <% address_link = "https://www.google.com/maps/place/" + (@dropsite.address + " " + @dropsite.city + " " + @dropsite.state + " " + @dropsite.zip.to_s).gsub(' ', '+') %>
    <a target="blank" href="<%= address_link %>">Map it!</a>
  </div>
</div>

<% if logged_in? %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for @user_dropsite do |f| %>
      <%= f.number_field :user_id, value: @user_dropsite.user_id, hidden: true %> 
      <%= f.number_field :dropsite_id, value: @user_dropsite.dropsite_id, hidden: true %> 
      <%= f.submit "Use this dropsite", class: "btn btn-primary outline" %>
    <% end %>
  </div>
</div>
<% end %>