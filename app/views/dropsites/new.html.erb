<h1>Add New Dropsite</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for @dropsite do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :phone %>
      <%= f.text_field :phone, class: 'form-control' %>

      <%= f.label :hours %>
      <%= f.text_field :hours, class: 'form-control' %>

      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>

      <%= f.label :access_instructions %>
      <%= f.text_field :access_instructions, class: 'form-control' %>

      <%= f.submit "Add new dropsite", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>