<h1>Add New Dropsite</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for @dropsite do |f| %>
      <%= render partial: 'shared/error_messages_general', locals: { active_record_object: @dropsite } %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :phone %>
      <%= f.text_field :phone, class: 'form-control' %>

      <%= f.label :hours %>
      <%= f.text_field :hours, class: 'form-control' %>

      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>

      <%= f.label :city %>
      <%= f.text_field :city, class: 'form-control' %>

      <%= f.label :state %>
      <%= f.text_field :state, class: 'form-control' %>

      <%= f.label :zip, "Zip code" %>
      <%= f.number_field :zip, class: 'form-control' %>    

      <%= f.label :access_instructions %>
      <%= f.text_field :access_instructions, class: 'form-control' %>

      <%= f.label :active, class: "inline" do %>
        <%= f.check_box :active, checked: true %>
        <span>Make dropsite active</span>      
      <% end %>

      <%= f.submit "Add new dropsite", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>