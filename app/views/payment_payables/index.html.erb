<h1>Payment Payables</h1>

<table class="table">
  <thead>
    <tr>          
      <th class="text-center">Creditor</th>
      <th class="text-center">Payment Method</th>                
      <th class="text-center">Amount Payable</th>      
    </tr>
  </thead>
  <tbody>
    <% @pps_by_creditor.each do |creditor, total| %>
      <tr>
        <td class="text-center">
          <%= link_to creditor.get_business_interface.name, payment_payables_path(creditor_id: creditor.id) %>
        </td>
        <td class="text-center">
          <%= creditor.get_business_interface.friendly_payment_method %>
        </td>
        <td class="text-center">                
          <%= number_to_currency(total) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>