<h1>Payment Payables</h1>

<table class="table">
  <thead>
    <tr>          
      <th class="text-left">Creditor</th>          
      <th class="text-center">Amount Payable</th>
    </tr>
  </thead>
  <tbody>
    <% @pps_by_creditor.each do |creditor, sub_total| %>
      <tr>
        <td class="text-left">
          <%= link_to creditor.get_business_interface.name, payment_payables_path(creditor_id: creditor.id) %>
        </td>
        <td class="text-center">                
          <%= number_to_currency(sub_total) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>