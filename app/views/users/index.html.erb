<% provide(:title, 'All users') %>
<h1>All users</h1>

<div class="panel panel-default">
  <div class="panel-heading">
    <h2>Producers</h2>
  </div>
  <div class="panel-body">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Farm</th>  
          <th>Email</th>
        </tr>
      </thead>
      <tbody>    
        <% @producers.each do |producer| %>
          <tr>
            <td><%= producer.id.to_s %></td>
            <td><%= link_to producer.farm_name, logout_path, class: "non-blue", method: "delete" %></td>          
            <td><%= producer.email %></td>
            <td>
              <%= form_tag sessions_spoof_path do %>      
                <%= hidden_field_tag :email, producer.email, class: "form-control" %>
                <%= submit_tag "Spoof", class: "btn btn-lg btn-primary outline" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= will_paginate %>

<ul class="users">
  <%= render @users %>
</ul>

<%= will_paginate %>