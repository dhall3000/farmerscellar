  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">

    <div class="panel panel-default">
	  <div class="panel-heading">
	    <p>ToteItem Filling Test</p>
	  </div>
	    <div class="panel-body">
			<%= form_tag tote_items_next_path, method: :post do |f| %>
			  <%= hidden_field_tag :test %>
			  <%= submit_tag "Fill & Fetch", class: "btn btn-primary" %>
			<% end %>    
	    </div>
    </div>


  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
	  <div class="panel-heading">
	    <p>Masspay Test</p>
	  </div>
	    <div class="panel-body">
			<%= form_tag bulk_payments_test_masspay_path, method: :post do %>
			  
			  <%= label_tag :email %>
			  <%= email_field_tag :email, nil, class: 'form-control' %>

			  <%= label_tag :amount %>
			  <%= number_field_tag :amount, nil, class: 'form-control' %>

			  <%= submit_tag "test masspay", class: 'btn btn-primary form-control' %>

			<% end %>
	    </div>
    </div>
  </div>
</div>