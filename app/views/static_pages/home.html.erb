<div class="center jumbotron">
  <h1>Farmer's Cellar</h1>
  <h3 class="fat-finger-spacing">local. clean. easy.</h3>

  <% if !logged_in? %>
    <div class="row row_spacing">
      <div class="col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-4">
        <%= link_to "Log in or sign up", login_path, class: "btn btn-lg btn-primary btn-block" %>
      </div>
    </div>
  <% end %>
</div>

<% if spoofing? %>

  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">

      <div class="panel-group">
        <div class="panel panel-default">      
          <div class="panel-heading">
            <h2 class="panel-title">User Spoof</h2>
          </div>
          <div class="panel-body">
            <%= link_to "Unspoof", sessions_unspoof_path, class: "btn btn-lg btn-primary" %>          
          </div>

        </div>
      </div>

    </div>
  </div>

  
<% end %>

<% if admin_logged_in? %>

  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">

      <div class="panel-group">



        <div class="panel panel-default">      

          <div class="panel-heading">
            <h2 class="panel-title">Miscellaneous</h2>
          </div>

          <div class="panel-body">
            <%= link_to "Receiving", creditor_orders_path, class: "btn btn-lg btn-primary btn-block" %>
            <%= link_to "Deliver products", deliveries_path, class: "btn btn-lg btn-primary btn-block" %>
            <%= link_to "Create new access code", new_access_code_path, class: "btn btn-lg btn-primary btn-block" %>    
            <%= link_to "Products", products_path, class: "btn btn-lg btn-primary btn-block" %>
            <%= link_to "Producer Product Commissions", producer_product_unit_commissions_path, class: "btn btn-lg btn-primary btn-block" %>
            <%= link_to "Add new dropsite", new_dropsite_path, class: "btn btn-lg btn-primary btn-block" %>
            <%= link_to "List dropsites", dropsites_path, class: "btn btn-lg btn-primary btn-block" %>        
            <% if @website_settings %>
              <%= link_to "Website Settings", edit_website_setting_path(@website_settings), class: "btn btn-lg btn-primary btn-block" %>
            <% end %>
            <%= link_to "List Users", users_path, class: "btn btn-lg btn-primary btn-block" %>
            <%= link_to "Go to test page", test_page_path, class: "btn btn-lg btn-primary btn-block" %>
            <%= link_to "Partner Users", partner_users_index_path, class: "btn btn-lg btn-primary btn-block" %>
            <%= link_to "Toggle garage door", toggle_garage_door_path, class: "btn btn-lg btn-primary btn-block" %>
            <%= link_to "Recent pickups", pickups_path, class: "btn btn-lg btn-primary btn-block" %>
          </div>

        </div>


        <div class="panel panel-default">      

          <div class="panel-heading">
            <h2 class="panel-title">User Spoof</h2>
          </div>
          <div class="panel-body">
            <%= form_tag sessions_spoof_path do %>      
              <%= label_tag :email %>
              <%= text_field_tag :email, nil, class: "form-control" %>                        
              <%= submit_tag "Spoof user", class: "btn btn-lg btn-primary btn-block" %>
            <% end %>
          </div>

        </div>


      </div>


    </div>
  </div>


<% end %>

<%= render partial: "shared/access_code_submission" %>