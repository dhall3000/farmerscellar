<div class="center jumbotron">
    <h1>Farmer's Cellar</h1>
    <h2>
    <p>Like an online Farmer's Market, only better!</p>
</h2>

<% if !logged_in? %>
  <%= link_to "Sign up!", signup_path, class: "btn btn-lg btn-primary" %>
<% end %>
</div>

<% if current_user != nil && current_user.account_type == User.types[:ADMIN] %>
  <div>
    <p><%= link_to "Process deliveries", postings_path %></p>
    <p><%= link_to "Do bulk buy", new_bulk_buy_path %></p>
    <p><%= link_to "Do bulk purchase", new_bulk_purchase_path %></p>
    <p><%= link_to "Do bulk payment", new_bulk_payment_path %></p>
    <p><%= link_to "Create new access code", new_access_code_path %></p>
  </div>
<% end %>

<%= render partial: "shared/access_or_action" %>