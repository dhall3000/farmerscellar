<h1>Product</h1>

<p>
  <span class="glyphicon glyphicon-arrow-left"></span>
  <%= link_to "Products", products_path %>
</p>
<p>
  <span class="glyphicon glyphicon-arrow-left"></span>
  <%= link_to "Food Categories", food_categories_path %>
</p>

<h2><%= @product.name %></h2>
<p>ID: <%= @product.id.to_s %>
<% if @product.food_category %>
  <p>Food Category: <%= link_to FoodCategoriesController.helpers.get_top_down_ancestors_string(@product.food_category), food_category_path(@product.food_category) %></p>
<% else %>
  <p>Food Category: nil</p>
<% end %>

<%= link_to "Edit", edit_product_path(@product), class: "btn btn-lg btn-primary outline" %>