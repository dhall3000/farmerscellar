<h1>FoodCategory</h1>

<p>
  <span class="glyphicon glyphicon-arrow-left"></span>
  <%= link_to "Food Categories", food_categories_path %>
</p>
<h2><%= @food_category.name %></h2>

<% if @food_category.children.any? || @food_category.products.any? %>

  <div class="panel-group">

    <div class="panel panel-default">
      <div class="anchor panel-heading" id="the_simple_version">
        <div class="panel-title">
          Parent
        </div>
      </div>
      <div class="panel-body">
        <ul>          
          <li><%= @food_category.parent.name %></li>          
        </ul>
      </div>
    </div>

    <% if @food_category.children.any? %>
      <div class="panel panel-default">
        <div class="anchor panel-heading" id="the_simple_version">
          <div class="panel-title">
            Children
          </div>
        </div>
        <div class="panel-body">
          <ul>
            <% @food_category.children.each do |child| %>
              <li><%= child.name %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <% if @food_category.products.any? %>
      <div class="panel panel-default">
        <div class="anchor panel-heading" id="the_simple_version">
          <div class="panel-title">
            Products
          </div>
        </div>
        <div class="panel-body">
          

        </div>
      </div>
    <% end %>

  </div>
<% end %>

<%= link_to "Edit #{@food_category.name}", edit_food_category_path(@food_category), class: "btn btn-lg btn-primary" %>