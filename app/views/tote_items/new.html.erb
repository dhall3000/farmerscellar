<h2 id="toteAdditionHeading" class="text-center">Add to Tote</h2>
  
<% if @posting != nil %>
  <% unit = Unit.find_by(id: @posting.unit_id) %>
  <% producer = User.find_by(id: @posting.user_id) %>
  <% provide(:title, producer.farm_name) %>

  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <% if @account_on_hold %>
        <p class="text-center alert alert-danger alert-dismissable">
          Your account is on hold, most likely due to a positive balance on your account. Please <%= link_to "contact Farmer's Cellar", contact_path %> to pay your balance before continuing to shop.
        </p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <div class="panel-group" id="accordion">







        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="panel-title">Product Info</h4>
          </div>
          <div class="panel-body">
            

            <ul class="list-group">

              <li class="list-group-item clearfix">
                
                <div class='spin-chevron'>
                  <a class="non-blue" data-toggle="collapse" data-parent="#accordion" href="#producerDescriptionBody">
                    <%= User.find_by(id: @posting.user_id).farm_name %> <%= Product.find_by(id: @posting.product_id).name %><span class="glyphicon glyphicon-chevron-up pull-right"></span>
                  </a>                

                  <div id="producerDescriptionBody" class="panel-collapse collapse">
                    <ul>
                      <li><%= "#{@posting.user.city}, #{@posting.user.state}"  %></li>
                      <% if @posting.user.website %>
                        <li>
                          <a href=<%= "#{@posting.user.website}" %> target='_blank'><%= @posting.user.website %></a>
                        </li>
                      <% end %>
                    </ul>                

                    <% if @posting.user.description %>
                      <div>
                        <%= @posting.user.description %>
                      </div>
                    <% end %>
                  </div>
                </div>

              </li>

              <li class="list-group-item clearfix">
                <% if @posting.description_body %>
                  <div class='spin-chevron'>
                    <a class="non-blue" data-toggle="collapse" data-parent="#accordion" href="#descriptionBody">
                      <%= @posting.description %><span class="glyphicon glyphicon-chevron-up pull-right"></span>
                    </a>                  
                    <div id="descriptionBody" class="panel-collapse collapse">
                      <%= @posting.description_body %>
                    </div>
                  <div>
                <% else %>
                  <%= @posting.description %>                
                <% end %>
              </li>              

              <li class="list-group-item clearfix">
                <% if @posting.unit_body || @posting.price_body %>
                  <div class="spin-chevron">
                    <a class="non-blue" data-toggle="collapse" data-parent="#accordion" href="#priceOrUnitBody">
                      <%= number_to_currency(@posting.price) %> / <%= Unit.find_by(id: @posting.unit_id).name %><span class="glyphicon glyphicon-chevron-up pull-right"></span>
                    </a>                  
                    <div id="priceOrUnitBody" class="panel-collapse collapse">
                      <ul>
                        <% if @posting.unit_body %>
                          <li><%= @posting.unit_body %></li>
                        <% end %>
                        <% if @posting.price_body %>
                          <li><%= @posting.price_body %></li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                <% else %>                  
                  <%= number_to_currency(@posting.price) %> / <%= Unit.find_by(id: @posting.unit_id).name %>
                <% end %>                
              </li>
              
              <li class="list-group-item clearfix">
                <div class="spin-chevron">
                  <a class="non-blue" data-toggle="collapse" data-parent="#accordion" href="#orderCutoff">
                    Delivery <%= @posting.delivery_date.strftime("%A, %B %-d") %><span class="glyphicon glyphicon-chevron-up pull-right"></span>
                  </a>
                
                  <div id="orderCutoff" class="panel-collapse collapse">
                    <ul>
                      <li>
                        <%= link_to "Order Cutoff", how_things_work_path(anchor: "cutoff") %>: <%= @posting.order_cutoff.strftime("%A, %B %-d, %l:%M %p") %>
                      </li>
                    </ul>
                  </div>
                </div>
              </li>

              <li class="list-group-item clearfix">
                <% if @posting.important_notes && !@posting.important_notes.empty? %>
                  <% if @posting.important_notes_body && !@posting.important_notes_body.empty? %>
                    <div class="spin-chevron">
                      <a class="non-blue" data-toggle="collapse" data-parent="#accordion" href="#important-notes-body">
                        <%= @posting.important_notes %>
                        <span id="important-notes-info-glyph" class="alert-info glyphicon glyphicon-info-sign spin-continuously"></span>
                        <span id="important-notes-chevron-glyph" class="glyphicon glyphicon-chevron-up pull-right"></span>                      
                      </a>
                    
                      <div id="important-notes-body" class="panel-collapse collapse">
                        <%= @posting.important_notes_body %>
                      </div>                    
                    </div>
                  <% else %>
                    <%= @posting.important_notes %>
                    <span id="important-notes-info-glyph" class="alert-info glyphicon glyphicon-info-sign spin-continuously"></span>
                  <% end %>
                <% end %>
              </li>

            </ul>


            

            
            
                        
          </div>
        </div>    



        <div class="panel panel-default">
          <div class="panel-heading" role="tab" id="quantityHeading">
            <h4 class="panel-title">Order Quantity</h4>
          </div>
          <div id="quantityBody" class="panel-body" role="tabpanel" aria-labelledby="quantityHeading">
            <%= render partial: "add_quantity", locals: { tote_item: @tote_item, posting: @posting, account_on_hold: @account_on_hold } %>
          </div>
        </div>            



      </div>
    </div>
  </div>
<% end %>