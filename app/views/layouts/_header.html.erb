<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Farmer's Cellar", root_path, id: "logo" %>

 <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapsible-navbar" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

 <div class="collapse navbar-collapse" id="collapsible-navbar">

    <nav>
      <ul class="nav navbar-nav navbar-right">        
        <li><%= link_to "Home", root_path,  class: "glyphicon" %></li>
        <% if logged_in? %>          
          <% if user_has_access?  %>
            <li><%= link_to "Shop", postings_path,  class: "glyphicon" %></li>
            <li><%= link_to " Tote", tote_items_path,  class: "glyphicon glyphicon-shopping-cart" %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="glyphicon dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>              
              <% if user_has_access?  %>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>                
              <% end %>
              <% if current_user.account_type == 1 && user_has_access? %>
                <li><%= link_to "Create new posting", new_posting_path(current_user) %></li>
              <% end %>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path,  class: "glyphicon" %></li>
        <% end %>
      </ul>
    </nav>

</div>

  </div>
</header>