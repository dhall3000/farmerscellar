<h1>Partner Users</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
  	<div class="panel-group">

	    <div class="panel panel-default">
			  <div class="panel-heading">
			    <h2>Create User</h2>
			  </div>
		    <div class="panel-body">
					<%= form_tag partner_users_create_path do %>	    
					  <%= label_tag :name %>
	          <%= text_field_tag :name, nil, class: "form-control" %>
					  <%= label_tag :email %>
	          <%= text_field_tag :email, nil, class: "form-control" %>

						<%= label_tag :dropsite %>
						<%= select_tag :dropsite, options_from_collection_for_select(@dropsites, "id", "name"), class: 'form-control' %>

		    		<%= submit_tag "Create user", class: "btn btn-lg btn-primary btn-block" %>
		    	<% end %>
		    </div>
	    </div>


	    <div class="panel panel-default">
			  <div class="panel-heading">
			    <h2>Existing Users</h2>
			  </div>
		    <div class="panel-body">


			    <%= form_tag partner_users_send_delivery_notification_path do %>
			      <table class="table">
			        <thead>
			          <tr>
			            <th class="text-center">Notify</th>
			            <th class="text-center">Name</th>
			            <th class="text-center">Email</th>
			          </tr>
			        </thead>
			        <tbody>
			    
			          <% @partner_users.each do |user| %>
			            <tr>
			              <td><%= check_box_tag "user_ids[]", user.id %></td>
			              <td class="text-center"><%= user.name %></td>
			              <td class="text-center"><%= user.email %></td>
			            </tr>
			          <% end %>
			        </tbody>
			      </table>  

					  <%= label_tag :partner_name %>
			      <%= text_field_tag :partner_name, nil, class: "form-control" %>

			  		<%= submit_tag "Send delivery notifications", class: "btn btn-lg btn-primary form-control" %>

			    <% end %>



		    </div>
	    </div>



  	</div>

  </div>
</div>